{% xlsdocument %}
    {% xlssheet 'Test' %}
        {% xlsrow %}
            {% xlscell %}Foo{% endxlscell %}
            {% xlscell 2 %}Bar{% endxlscell %}
            {% xlscell 2 %}Lorem{% endxlscell %}
            {% xlscell %}Ipsum{% endxlscell %}
            {% xlscell 1 %}Hello{% endxlscell %}
            {% xlscell 4 %}World{% endxlscell %}
        {% endxlsrow %}
        {% xlsrow %}
            {% xlscell 0 %}Foo{% endxlscell %}
            {% xlscell 1.0 %}Bar{% endxlscell %}
            {% xlscell '2' %}Lorem{% endxlscell %}
            {% set index = 3 %}
            {% xlscell index %}Ipsum{% endxlscell %}
            {% xlscell 2 + 2 %}Hello{% endxlscell %}
            {% xlscell '5'|upper %}World{% endxlscell %}
        {% endxlsrow %}
    {% endxlssheet %}
{% endxlsdocument %}
